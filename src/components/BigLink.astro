---
interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<a
  class="flex flex-col p-4 text-white rounded-xl bg-slate-800 duration-700 hover:bg-slate-600 hover:shadow-xl transition-colors duration-600"
  href={href}
>
  <h2 class="hover:text-accent-light focus:text-accent-light">
    {title}
  </h2>
  <p class="text-slate-400">{body}</p>
  <slot />
</a>
