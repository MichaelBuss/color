---
interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<li class="flex rounded-xl p-1 bg-slate-800 transition-transform duration-700 hover:bg-slate-600 hover:shadow-xl">
  <a href={href} class="p-4 text-white text-responsive-title-xs">
    <h2 class="capitalize transition-colors duration-600 hover:text-accent-light focus:text-accent-light">
      {title}
    </h2>
    <p class="text-slate-400">{body}</p>
  </a>
</li>
