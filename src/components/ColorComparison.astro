---
import { type Color, cvaColor } from "../colors";

interface Props {
  color: Color;
}

const { color } = Astro.props;
---

<div class="grid grid-cols-2 w-screen h-screen">
  <h1
    class="text-9xl uppercase font-black w-min px-6 rounded-2xl bg-white text-slate-800 absolute top-1/2 left-1/2 text-center -translate-y-1/2 -translate-x-1/2"
  >
    {color}
  </h1>
  <p class="absolute text-white text-xl left-4 bottom-4">sRGB</p>
  <p class="absolute text-white text-xl right-4 bottom-4">P3</p>
  <div class={cvaColor({ srgb: color }) + " w-full h-full"}></div>
  <div class={cvaColor({ p3: color }) + " w-full h-full"}></div>
</div>
