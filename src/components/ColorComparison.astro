---
import { twMerge } from "tailwind-merge";

import { type Color, cvaColor } from "../colors";

interface Props {
  color: Color;
  class?: string;
}

const { color, class: className } = Astro.props;
---

<div class={twMerge("grid grid-cols-2 w-full h-full", className)}>
  <h1
    class="text-responsive-title-2xl uppercase font-black w-min px-6 rounded-2xl bg-white text-slate-800 absolute top-1/2 left-1/2 text-center -translate-y-1/2 -translate-x-1/2"
  >
    {color}
  </h1>

  <div class={cvaColor({ srgb: color, class: "w-full h-full" })}></div>
  <div class={cvaColor({ p3: color, class: "w-full h-full" })}></div>
</div>
